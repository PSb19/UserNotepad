@model UserNotepad.Models.User
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete User</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="DeleteUser" method="post">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>:
                @Html.DisplayFor(modelItem => Model.Name)
            </div>
            <div class="form-group">
                <label asp-for="Surname" class="control-label"></label>:
                @Html.DisplayFor(modelItem => Model.Surname)
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>:
                @Html.DisplayFor(modelItem => Model.Gender)
            </div>
            <div class="form-group">
                <label asp-for="BirthDate" class="control-label"></label>:
                @Convert.ToString(Model.BirthDate)
            </div>
            @* Show extras  *@
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-primary btn-danger" />
            </div>
        </form>
    </div>
</div>

<div>
        <a asp-action="ListUsers">Back to List</a>
</div>